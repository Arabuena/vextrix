{
  "version": 2,
  "framework": "create-react-app",
  "buildCommand": "npm run build",
  "installCommand": "npm install",
  "outputDirectory": "build",
  "env": {
    "REACT_APP_API_URL": "https://bora-backend-5agl.onrender.com",
    "REACT_APP_GOOGLE_MAPS_API_KEY": "AIzaSyAVe7W-B0zZa-6ePrcLfZkDzs1RGRSHSCc"
  },
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "https://bora-backend-5agl.onrender.com/:path*"
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
